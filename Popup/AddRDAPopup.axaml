<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
        x:Class="RemoteHub.Popup.AddRDAPopup"
        Title="AddRDAPopup" Height="250" Width="300">
  <Grid>
    <TextBox x:Name="RDAName" Watermark="Nom du l'application" Height="15" Width="280" Margin="5,10,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="Address" Watermark="Adresse du PC distant" Height="15" Width="280" Margin="5,50,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="Name" Watermark="Nom d'utilisateur (DOMAIN\USER)" Height="15" Width="280" Margin="5,90,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="Password" Watermark="Mot de passe" Height="15" Width="280" Margin="5,130,0,0" VerticalAlignment="Top"/>
    <Button Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,50" Click="Add_Click"/>
    <Image x:Name="IconPreview" Width="64" Height="64" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
    <Button Content="Ajouter" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="Add_Click"/>
    <Button Content="Avances" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="80,0,0,10" Click="Advanced_Click"/>
    <Button Content="Annuler" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Cancel_Click"/>
  </Grid>
</Window>
